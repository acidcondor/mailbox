<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
 <class name="org.benjob.smartmailbox.model.PersonAddresses" table="PERSON_ADDRESSES">
  <id column="ID" name="id" type="long">
   <generator class="native">
    <param name="sequence">PERSON_ADDRESSES_SEQ</param>
   </generator>
  </id>
  <many-to-one class="org.benjob.smartmailbox.model.Person"
   column="PERSON_ID" name="Person"/>
  <many-to-one class="org.benjob.smartmailbox.model.Address"
   column="ADDRESS_ID" name="Address"/>
  <property column="IS_OWNER" name="isOwner" type="boolean"/>
  <property column="START_DATE" name="StartDate" type="date"/>
  <property column="END_DATE" name="EndDate" type="date"/>
 </class>
</hibernate-mapping>
